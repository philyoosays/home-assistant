{
  "name": "helios",
  "version": "0.0.1",
  "description": "A home assistant",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server.js",
    "dev": "nodemon server.js",
