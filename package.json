    "concurrently": "^3.6.0",
    "nodemon": "^1.17.5"
  },
  "dependencies": {
    "dotenv": "^6.0.0",
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
